# FamilyFinance Environment Configuration
# Copy to .env and fill with actual values

# =============================================================================
# Application
# =============================================================================
APP_NAME=FamilyFinance
APP_ENV=development
ENVIRONMENT=development
DEBUG=true
APP_VERSION=1.0.0
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://familyfinance:password@localhost:5432/familyfinance

# =============================================================================
# Redis (Sessions/Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================
# Generate with: openssl rand -base64 32
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Google Cloud Storage
# =============================================================================
GCS_BUCKET_NAME=family-finance-prod
GCS_PROJECT_ID=your-gcp-project-id
GCS_CREDENTIALS_PATH=/app/secrets/gcp-key.json

# =============================================================================
# External APIs
# =============================================================================
EXCHANGE_RATE_API_KEY=your-api-key-here

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["https://Family-Finance.scram2k.com","http://localhost:3000"]

# =============================================================================
# Base Currency
# =============================================================================
BASE_CURRENCY=MXN

# =============================================================================
# Domain Configuration (for Docker Compose)
# =============================================================================
DOMAIN=familyfinance.io
ACME_EMAIL=admin@familyfinance.io

# =============================================================================
# Monitoring (optional)
# =============================================================================
GRAFANA_ADMIN_PASSWORD=change-this-password
# Generate with: htpasswd -nb admin your-password
TRAEFIK_DASHBOARD_USER=admin:$apr1$hash

# =============================================================================
# GCP Configuration (for production deployment)
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
VERSION=latest
